#!/bin/sh

# Install passwd.master and group.master to sysconfdir
install -d -m 755 /home/bishoy/Desktop/sources/poky/build/tmp/work/cortexa7t2hf-neon-vfpv4-poky-linux-gnueabi/apt/1.2.31-r0/recipe-sysroot/etc
for i in passwd group; do
	install -p -m 644 /home/bishoy/Desktop/sources/poky/build/tmp/work/cortexa7t2hf-neon-vfpv4-poky-linux-gnueabi/apt/1.2.31-r0/recipe-sysroot/usr/share/base-passwd/$i.master 		/home/bishoy/Desktop/sources/poky/build/tmp/work/cortexa7t2hf-neon-vfpv4-poky-linux-gnueabi/apt/1.2.31-r0/recipe-sysroot/etc/$i
done

# Run any useradd postinsts
for script in /home/bishoy/Desktop/sources/poky/build/tmp/work/cortexa7t2hf-neon-vfpv4-poky-linux-gnueabi/apt/1.2.31-r0/recipe-sysroot/usr/bin/postinst-useradd-*; do
	if [ -f $script ]; then
		$script
	fi
done

